# =============================================================================
# FIWARE Configuration
# =============================================================================
FIWARE_BASE_URL=https://imiq-public.et.uni-magdeburg.de/api/orion
FIWARE_API_KEY=fiware_api_key_here

# =============================================================================
# OpenAI-compatible API Configuration
# =============================================================================
OPENAI_API_KEY=openai_api_key_here
OPENAI_BASE_URL=https://chat-ai.academiccloud.de/v1

# =============================================================================
# Neo4j Configuration (Neo4j Aura - Cloud)
# =============================================================================
NEO4J_URI=neo4j+s://xxxxx.databases.neo4j.io
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=neo4j_password_here
NEO4J_DATABASE=neo4j

# =============================================================================
# OpenRouteService Configuration
# =============================================================================
ORS_API_KEY=openrouteservice_api_key_here
ORS_BASE_URL=https://api.openrouteservice.org

# =============================================================================
# TomTom Traffic API Configuration
# =============================================================================
TOMTOM_API_KEY=tomtom_api_key_here
TOMTOM_TIMEOUT=10

# =============================================================================
# HuggingFace - use cached models, skip online checks
# =============================================================================
HF_HUB_OFFLINE=1

# =============================================================================
# Application Settings
# =============================================================================
MODEL=qwen3-30b-a3b-instruct-2507
KNOWLEDGE_DIR=data/knowledge
MAX_CONVERSATION_HISTORY=6
MAX_TOOL_ITERATIONS=5
HTTP_TIMEOUT=10

# =============================================================================
# Magdeburg Coordinates (for geocoding focus)
# =============================================================================
MAGDEBURG_LAT=52.1205
MAGDEBURG_LON=11.6276

# =============================================================================
# MULTI-AGENT SYSTEM SETTINGS 
# =============================================================================

# Feature flag: Enable/disable agentic mode
ENABLE_AGENTIC_MODE=true

# Agent model configurations
ROUTER_AGENT_MODEL=qwen3-30b-a3b-instruct-2507
NEO4J_AGENT_MODEL=qwen3-30b-a3b-instruct-2507
FIWARE_AGENT_MODEL=qwen3-30b-a3b-instruct-2507
SYNTHESIZER_AGENT_MODEL=qwen3-30b-a3b-instruct-2507
ROUTER_AGENT_TIMEOUT=15
NEO4J_AGENT_TIMEOUT=30
FIWARE_AGENT_TIMEOUT=20
SYNTHESIZER_AGENT_TIMEOUT=30

# Agent temperature settings
ROUTER_AGENT_TEMPERATURE=0.1
NEO4J_AGENT_TEMPERATURE=0.0
FIWARE_AGENT_TEMPERATURE=0.1
SYNTHESIZER_AGENT_TEMPERATURE=0.3

# Agent token limits
ROUTER_AGENT_MAX_TOKENS=500
NEO4J_AGENT_MAX_TOKENS=1000
FIWARE_AGENT_MAX_TOKENS=800
SYNTHESIZER_AGENT_MAX_TOKENS=2000

# Agent retry settings
AGENT_MAX_RETRIES=2
AGENT_RETRY_DELAY=0.5

# Router confidence threshold (0.0-1.0)
ROUTER_MIN_CONFIDENCE=0.7

# Debug settings
AGENT_VERBOSE_LOGGING=false
AGENT_LOG_PROMPTS=false

# Parallel execution
AGENT_PARALLEL_EXECUTION=true

# =============================================================================
# ElevenLabs TTS Configuration
# =============================================================================
ELEVENLABS_API_KEY=elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=voice_id_here
